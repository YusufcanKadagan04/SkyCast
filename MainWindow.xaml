                                <TextBlock Grid.Column="0" Text="Today" Foreground="#808080" FontSize="10" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                                <Image Grid.Column="1" Source="/Images/sun.png" Width="35" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,0,0" />
                                <TextBlock Grid.Column="2" Text="Sunny" Foreground="White" FontSize="10" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                                <TextBlock Grid.Column="3" Margin="0,10,0,0" HorizontalAlignment="Center" FontSize="10">
                                    <Run Text="36" Foreground="White" FontWeight="Bold"/>

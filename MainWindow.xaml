<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hava Durumu" Height="650" Width="1000"
        Background="#0b131e" 
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>

            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#202b3b" CornerRadius="30">
            <StackPanel >
                <Button Content="Weather" Height="70" Margin="10,85,10,30" />
                <Button Content="Cities" Height="70" Margin="10,0,10,30" />
                <Button Content="Map" Height="70" Margin="10,0,10,30" />
                <Button Content="Settings" Height="70" Margin="10,0,10,30" />
            </StackPanel>
        </Border>

        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#202b3b" CornerRadius="15" Height="50" Margin="0,0,0,20">
                <TextBlock Text="Search for cities..." Foreground="Gray" VerticalAlignment="Center" Margin="20,0,0,0"/>
            </Border>

            <Grid Grid.Row="1" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <!--Burası birinci sütün-->
                <Grid Grid.Column="0" Margin="0,0,20,0">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="1.1*"/>
                        <RowDefinition Height="1.3*"/>
                        <RowDefinition Height="1.3*"/>
                    </Grid.RowDefinitions>
                    <!--Burası seçilen şehrin hava durumunun tam gösterimi-->
                    <Border Grid.Row="0" Background="#0b131e" CornerRadius="20" Margin="0,0,0,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="20,0,0,0">
                                <TextBlock Text="İstanbul, Türkiye" FontSize="26" Foreground="White" FontWeight="Bold"/>
                                <TextBlock Text="Cuma, 2 Ocak 2025" FontSize="13" Foreground="LightGray" Margin="0,5,0,20"/>
                                <TextBlock Text="25°C" FontSize="50" Foreground="White" FontWeight="Bold"/>
                            </StackPanel>

                            <Image Grid.Column="1" Source="/Images/sun.png" Width="150" HorizontalAlignment="Right" Margin="0,5,0,20"/>
                        </Grid>
                    </Border>

                    <!--Burdası Günlük Hava Durumu Saatlik Tahmini-->
                    <Border Grid.Row="1" Background="#202b3b" CornerRadius="20" Margin="0,0,0,20">
                        <Grid Margin="15">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="TODAY'S FORECAST" Foreground="#808080" FontSize="12" FontWeight="Bold" Margin="0,0,0,15"/>

                            <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center">

                                <StackPanel Margin="0,0,30,0">
                                    <TextBlock Text="06:00 AM" Foreground="#A0A0A0" FontSize="12" HorizontalAlignment="Center"/>
                                    <Image Source="/Images/sun.png" Width="40" HorizontalAlignment="Center" Margin="0,10,0,10"/>
                                    <TextBlock Text="25°" Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Margin="0,0,30,0">
                                    <TextBlock Text="09:00 AM" Foreground="#A0A0A0" FontSize="12" HorizontalAlignment="Center"/>
                                    <Image Source="/Images/sun.png" Width="40" HorizontalAlignment="Center" Margin="0,10,0,10"/>
                                    <TextBlock Text="27°" Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Margin="0,0,30,0">
                                    <TextBlock Text="12:00 PM" Foreground="#A0A0A0" FontSize="12" HorizontalAlignment="Center"/>
                                    <Image Source="/Images/sun.png" Width="40" HorizontalAlignment="Center" Margin="0,10,0,10"/>
                                    <TextBlock Text="30°" Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Margin="0,0,30,0">
                                    <TextBlock Text="03:00 PM" Foreground="#A0A0A0" FontSize="12" HorizontalAlignment="Center"/>
                                    <Image Source="/Images/sun.png" Width="40" HorizontalAlignment="Center" Margin="0,10,0,10"/>
                                    <TextBlock Text="28°" Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Margin="0,0,30,0">
                                    <TextBlock Text="06:00 PM" Foreground="#A0A0A0" FontSize="12" HorizontalAlignment="Center"/>
                                    <Image Source="/Images/sun.png" Width="40" HorizontalAlignment="Center" Margin="0,10,0,10"/>
                                    <TextBlock Text="26°" Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Margin="0,0,30,0">
                                    <TextBlock Text="09:00 PM" Foreground="#A0A0A0" FontSize="12" HorizontalAlignment="Center"/>
                                    <Image Source="/Images/sun.png" Width="40" HorizontalAlignment="Center" Margin="0,10,0,10"/>
                                    <TextBlock Text="24°" Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                                </StackPanel>

                            </StackPanel>
                        </Grid>
                    </Border>

                    <!--Burası Rüzgar ve Nem kısmı-->
                    <Border Grid.Row="3" Background="#202b3b" CornerRadius="20" Margin="0,0,0,0">
                        <Grid Margin="20">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="AIR CONDITIONS" Foreground="#808080" FontSize="12" FontWeight="Bold" VerticalAlignment="Center"/>

                                <Border Grid.Column="1" Background="#0099FF" CornerRadius="10" Padding="7,3">
                                    <TextBlock Text="See more" Foreground="White" FontSize="10" FontWeight="Bold" VerticalAlignment="Center"/>
                                </Border>
                            </Grid>
                            <Grid Grid.Row="1">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock Text="🌡️ Real Feel" Foreground="#808080" FontSize="14" Margin="0,10,0,5"/>
                                    <TextBlock Text="30°" Foreground="White" FontSize="20" FontWeight="Bold" Margin="20,0,0,20"/>
                                </StackPanel>

                                <StackPanel Grid.Row="0" Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="💨 Wind" Foreground="#808080" FontSize="14" Margin="0,10,0,5"/>
                                    <TextBlock Text="0.2 km/h" Foreground="White" FontSize="20" FontWeight="Bold" Margin="20,0,0,20"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock Text="💧 Chance of rain" Foreground="#808080" FontSize="14" Margin="0,10,0,5"/>
                                    <TextBlock Text="0%" Foreground="White" FontSize="20" FontWeight="Bold" Margin="20,0,0,20"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="☀️ UV Index" Foreground="#808080" FontSize="14" Margin="0,10,0,5"/>
                                    <TextBlock Text="3" Foreground="White" FontSize="20" FontWeight="Bold" Margin="20,0,0,20"/>
                                </StackPanel>
                            </Grid>
                        </Grid>

                    </Border>

                </Grid>
                
